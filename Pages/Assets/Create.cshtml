@page
@model ITAssetManagement.Pages.Assets.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1 class="mb-4">@ViewData["Title"] Asset</h1>

<form method="post" class="row g-3">
    <div class="col-md-6 form-floating">
        <input asp-for="Asset.Name" class="form-control" placeholder="Name" />
        <label asp-for="Asset.Name">Name</label>
        <div class="invalid-feedback">@Html.ValidationMessageFor(m => m.Asset.Name)</div>
    </div>
    <div class="col-md-6 form-floating">
        <input asp-for="Asset.Type" class="form-control" placeholder="Type" />
        <label asp-for="Asset.Type">Type</label>
        <div class="invalid-feedback">@Html.ValidationMessageFor(m => m.Asset.Type)</div>
    </div>
    <div class="col-md-6 form-floating">
        <input asp-for="Asset.Status" class="form-control" placeholder="Status" />
        <label asp-for="Asset.Status">Status</label>
        <div class="invalid-feedback">@Html.ValidationMessageFor(m => m.Asset.Status)</div>
    </div>
    <div class="col-md-6 form-floating">
        <input asp-for="Asset.PurchaseDate" type="date" class="form-control" placeholder="Purchase Date" />
        <label asp-for="Asset.PurchaseDate">Purchase Date</label>
    </div>
    <div class="col-md-6 form-floating">
        <input asp-for="Asset.WarrantyExpiry" type="date" class="form-control" placeholder="Warranty Expiry" />
        <label asp-for="Asset.WarrantyExpiry">Warranty Expiry</label>
    </div>
    <div class="col-md-6 form-floating">
        <select asp-for="Asset.AssignedTo" asp-items="Model.EmployeeList" class="form-select">
            <option value="">-- Select Employee --</option>
        </select>
        <label asp-for="Asset.AssignedTo">Assigned To</label>
    </div>
    <div class="col-12">
        <label class="form-label">Vendors</label>
        <select asp-for="SelectedVendorIds" asp-items="Model.VendorList" multiple class="form-select"></select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-page="Index" class="btn btn-link">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

