@page
@model ITAssetManagement.Pages.ActivityLogs.IndexModel
@{
    ViewData["Title"] = "Activity Logs";
}

<h2>Activity Logs</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>User</th>
            <th>Action</th>
            <th>Asset ID</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs)
        {
            <tr>
                <td>@log.Timestamp</td>
                <td>@log.UserName</td>
                <td>@log.Action</td>
                <td>@log.AssetID</td>
                <td>@log.Details</td>
            </tr>
        }
    </tbody>
</table>

