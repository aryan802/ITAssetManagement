@page
@model ITAssetManagement.Areas.Identity.Pages.Account.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Log in";
}

<h1>Log in</h1>
<hr />

<form method="post" asp-antiforgery="true">
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
        <label asp-for="Input.Email">Email</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
        <label asp-for="Input.Password">Password</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" id="rememberMeCheck" />
        <label asp-for="Input.RememberMe" class="form-check-label" for="rememberMeCheck">Remember me?</label>
    </div>

    <button type="submit" class="btn btn-primary">Log in</button>
    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-link">
        Register as new user
    </a>
    <p>
        <a asp-area="Identity" asp-page="/Account/ForgotPassword">Forgot your password?</a>
    </p>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



