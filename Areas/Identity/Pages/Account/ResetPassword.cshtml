@page
@model ITAssetManagement.Areas.Identity.Pages.Account.ResetPasswordModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Reset Password";
}

<h1>@ViewData["Title"]</h1>
<hr />
<form method="post" asp-antiforgery="true">
    <input type="hidden" asp-for="Input.Code" />
    <input type="hidden" asp-for="Input.Email" />

    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Reset Password</button>
</form>

